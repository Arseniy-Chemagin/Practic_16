using System;
using System.Linq;

public class Vector
{
    private double[] _components;

    public Vector(params double[] components)
    {
        if (components == null || components.Length == 0)
        {
            throw new ArgumentException("Вектор должен содержать хотя бы один компонент.");
        }
        _components = (double[])components.Clone();
    }

    public int Dimension => _components.Length;

    public double this[int index]
    {
        get
        {
            if (index < 0 || index >= Dimension)
            {
                throw new IndexOutOfRangeException($"Индекс {index} находится вне диапазона [0, {Dimension - 1}] для вектора.");
            }
            return _components[index];
        }
        set
        {
            if (index < 0 || index >= Dimension)
            {
                throw new IndexOutOfRangeException($"Индекс {index} находится вне диапазона [0, {Dimension - 1}] для вектора.");
            }
            _components[index] = value;
        }
    }

    public static double operator *(Vector v1, Vector v2)
    {
        if (v1.Dimension != v2.Dimension)
        {
            throw new ArgumentException("Для скалярного произведения векторы должны иметь одинаковую размерность.");
        }

        double dotProduct = 0;
        for (int i = 0; i < v1.Dimension; i++)
        {
            dotProduct += v1[i] * v2[i];
        }
        return dotProduct;
    }

    public override string ToString()
    {
        return $"[{string.Join(", ", _components)}]";
    }
}

public class Program
{
    public static void Main(string[] args)
    {
        var v1 = new Vector(1, 2, 3);
        var v2 = new Vector(4, 5, 6);

        Console.WriteLine(v1 * v2); 

        v1[1] = 10; 
        Console.WriteLine(v1); 

        var v3 = new Vector(7, 8);
        try
        {
            Console.WriteLine(v1 * v3); 
        }
        catch (ArgumentException ex)
        {
            Console.WriteLine($"Ошибка: {ex.Message}");
        }

        try
        {
            v1[5] = 99;
        }
        catch (IndexOutOfRangeException ex)
        {
            Console.WriteLine($"Ошибка: {ex.Message}");
        }

        Console.ReadKey();
    }
}
